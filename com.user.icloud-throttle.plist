<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
    iCloud & Spotlight Throttle Daemon
    
    INSTALLATION:
    1. Replace YOUR_USERNAME with your actual macOS username
    2. Copy to /Library/LaunchDaemons/
    3. Load with: sudo launchctl load /Library/LaunchDaemons/com.user.icloud-throttle.plist
    
    Or use macos-setup.sh which does this automatically.
-->
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.icloud-throttle</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/bash</string>
        <string>/Users/YOUR_USERNAME/bin/icloud-throttle.sh</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardErrorPath</key>
    <string>/tmp/icloud-throttle.err</string>
    <key>StandardOutPath</key>
    <string>/tmp/icloud-throttle.out</string>
</dict>
</plist>
